
@{
    ViewBag.Title = "Registration Index";
}

<h2>User Registration Page</h2>
<form action="/UserReg/UserReg" method="post">
    <br />
    
    <fieldset class="form-group">
        First Name: <input type="text" class="form-control" maxlength="32" name="FirstName" pattern="[A-Za-z]{1,32}" /><br />
        Last Name: <input type="text" class="form-control" maxlength="32" name="LastName" pattern="[A-Za-z]{1,32}" /><br />
        <!--number lets user keyboard on mobile pop up to a number-->
        Email: <input id="Email" type="email" class="form-control" name="Email" /><br />
        <div>
            <span id="EmailWarning"></span>
        </div>
        Phone Number: <input id="PhoneNumber" type="tel" class="form-control" maxlength="10" min="1111111111" name="PhoneNumber" @*pattern="^[0-9]{10}$"*@ /><br />
        <div>
            <span id="PhoneWarning"></span>
        </div>
        Password: <input id="Password" type="password" class="form-control" name="Password" /><br />
        Confirm Password: <input id="Password2" type="password" class="form-control" name="Password2" /><br />
        <div>
            <span id="PasswordWarning"></span>
        </div>
        Security Question:
        <select id="security" name="SecurityQuestion" class="form-control" >
            <option value="What is your mother's maiden name?">What is your mother's maiden name?</option>
            <option value="What is your favorite color?">What is your favorite color?</option>
            <option value="What was your first pet's name?">What was your first pet's name?</option>
            <option value="What was the first nickname you gave someone?">What was the first nickname you gave someone?</option>
        </select><br />
        @*string security = document.getElementById("security").value;*@

        Security Question Answer: <input type="text" maxlength="32" class="form-control" name="SecurityAnswer" pattern="[A-Za-z]{1,32}" /><br />
    </fieldset>
    <input type="submit" onclick="return CheckPassword(); CheckEmail(); CheckPhoneNumber();" value="Submit Registration!" /><br />
    @*<input type="reset" name="Reset" />*@

</form>

<script>
    function CheckPassword() {
        var password = document.getElementById("Password").value;
        var password2 = document.getElementById("Password2").value;
        if (password !== password2) {
            //alert("Password is invalid");
            document.getElementById("PasswordWarning").innerHTML = "<b>Passwords did not match. Please try again!</b>";
            return false;
        }
        return true;
    }
</script>

<script>
    function CheckEmail() {
        var email = document.getElementById("Email").value;
        if (email.match("[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?")) {
            //alert("Password is invalid");
            document.getElementById("EmailWarning").innerHTML = "<b>Email was not in the correct format. Please try again!</b>";
            return false;
        }
        return true;
    }
</script>

<script>
    function CheckPhoneNumber() {
        var email = document.getElementById("PhoneNumber").value;
        if (email.match("^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$")) {
            //alert("Password is invalid");
            document.getElementById("PhoneWarning").innerHTML = "<b>Phone number was not in the correct format. Please try again!</b>";
            return false;
        }
        return true;
    }
</script>


